{
  "name": "kapilvirenahuja-website",
  "version": "1.0.0",
  "description": "Personal website built with Next.js, featuring high-performance, accessibility, and modern development practices",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix",
    "lint:check": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "analyze": "cross-env ANALYZE=true next build",
    "lighthouse": "lhci autorun",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pre-commit": "npm run lint && npm run type-check && npm run test:ci",
    "prepare": "husky install"
  },
  "dependencies": {
    "next": "^14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@next/font": "^14.2.5",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-navigation-menu": "^1.2.0",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-accordion": "^1.2.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-react": "^0.427.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "typescript": "^5.5.4",
    "tailwindcss": "^4.0.0-alpha.20",
    "@tailwindcss/typography": "^0.5.13",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.5",
    "@next/bundle-analyzer": "^14.2.5",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/user-event": "^14.5.2",
    "jest-environment-jsdom": "^29.7.0",
    "@lhci/cli": "^0.13.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.7",
    "@axe-core/playwright": "^4.9.1",
    "playwright": "^1.45.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/How2Architect/kapilvirenahuja.git"
  },
  "keywords": [
    "nextjs",
    "personal-website",
    "typescript",
    "tailwindcss",
    "shadcn-ui",
    "accessibility",
    "performance"
  ],
  "author": "Kapil Viren Ahuja",
  "license": "MIT"
}